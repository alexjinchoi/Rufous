<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.antilibrary.rufous">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <package android:name="com.axissoft.starplayer" />
        <package android:name="kr.co.axissoft.starplayerplus" />
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_rufous"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_rufous_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rufous"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".BookmarkActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>